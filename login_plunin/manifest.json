{
	"manifest_version": 2,

	"name": "One-click Kittens",
	"description": "This extension demonstrates a browser action with kittens.",
	"version": "1.0",
	"permissions": [
		"http://127.0.0.1/",
		"tabs"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": ["http://127.0.0.1/"],
		"js": ["content_script.js"]
	}]
}